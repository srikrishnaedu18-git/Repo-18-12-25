pipeline {
    agent any
    tools {
        maven 'M3'   // matches the Maven installation name in Jenkins
    }
    stages {
        stage('Checkout Git') {
            steps {
                git branch: 'main', url: '<your-repository-url>'
            }
        }
        stage('Build and Test') {
            steps {
                sh 'mvn clean test'
            }
        }
    }
}
